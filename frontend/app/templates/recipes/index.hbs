<div class="row">

  {{#each model as |recipe|}}
    <div class="col-xs-6 col-sm-4 col-md-3 recipe-holder">
      <div class="panel panel-default recipe-preview">

        <div class="panel-heading">
          <h4>{{#link-to "recipes.show" recipe}}{{recipe.name}}{{/link-to}}</h4>
        </div>

        <div class="panel-body">
          <p>
            {{recipe.description}}
          </p>
        </div>

      </div>
    </div>
  {{/each}}

</div>
